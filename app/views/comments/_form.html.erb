<%= form_with model: [meow, @comment], data: { controller: "reset-form", action: "turbo:submit-end->reset-form#reset" } do |f| %>
  <p class="pt-3">Replying
    to <%= link_to meow.user.name, profile_path(meow.user), class: "text-yellow-300 hover:text-yellow-400" %></p>
  <div class="flex items-start justify-between space-x-3 py-6 border-b">
    <%= profile_image(current_user) %>
    <div class="flex-1">
      <%= f.label :body, class: "sr-only" %>
      <%= f.text_area :body, class: "border-none w-full resize-none rounded-md focus:shadow-none focus_border-none ring-0 focus:ring-0 focus:outline-none text-lg py-3 px-0 h-full min-h-[100px]", placeholder: "Reply to meowz" %>
    </div>
    <%= f.submit "Reply", class: "px-6 py-2 bg-yellow-300 text-white font-semibold rounded-full text0center cursor-pointer inline-block hover:bg-sky-500 transition ease-in-out duration-300" %>
  </div>
<% end %>